<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context="org.beginners.saran.weather.CurrentWeatherFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/a"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center"
        android:paddingTop="15dp"
        android:text="Todays Weather"
        android:textColor="#4d61f5"
        android:textSize="55dp"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/tempTV"
        android:layout_below="@+id/a"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center"
        tools:text="21"
        android:layout_marginTop="30dp"
        android:textColor="#4d74f5"
        android:textSize="75dp"
        android:textStyle="bold|italic" />
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tempTV"
        android:padding="0dp"
        android:id="@+id/weatherIcon"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:layout_centerHorizontal="true"
        android:tint="#2af54d6d"
        />

    <TextView
        android:layout_marginTop="0dp"
        android:id="@+id/descritionTV"
        android:layout_below="@+id/weatherIcon"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center"
        tools:text="Sunny"
        android:textColor="#4d71f5"
        android:textSize="45dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/humidityTV"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:gravity="top|center"
        tools:text="Sunny"
        app:layout_widthPercent="25%"
        android:textColor="#4d90f5"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/pressureTV"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/humidityTV"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        app:layout_widthPercent="25%"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:gravity="top|center"
        tools:text="Sunny"
        android:textColor="#4dcbf5"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/maxtempTV"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/pressureTV"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        app:layout_widthPercent="25%"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:gravity="top|center"
        tools:text="Sunny"
        android:textColor="#4d9ef5"
        android:textSize="18dp"
    />
    <TextView
        android:id="@+id/mintempTV"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/maxtempTV"
        android:layout_marginBottom="0dp"
        app:layout_widthPercent="25%"
        android:paddingBottom="0dp"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:gravity="top|center"
        tools:text="Sunny"
        android:textColor="#4d9bf5"
        android:textSize="18dp"
    />

</android.support.percent.PercentRelativeLayout>
